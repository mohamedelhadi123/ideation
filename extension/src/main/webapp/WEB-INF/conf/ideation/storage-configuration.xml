<?xml version="1.0" encoding="ISO-8859-1"?>


<configuration
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
        xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
    <!-- Enable JPA -->
    <component>
        <type>org.exoplatform.commons.persistence.impl.EntityManagerService</type>
    </component>
    <!-- Badges storage (JPA) -->
    <component>
        <type>org.exoplatform.ideation.storage.dao.IdeaDAO</type>
    </component>
    <component>
        <type>org.exoplatform.ideation.service.IdeaService</type>
    </component>
    <component>
        <type>rest.TestRest</type>
    </component>
    <!-- ideation  storage layout (Liquebase initializer) -->
    <external-component-plugins>
        <target-component>org.exoplatform.commons.api.persistence.DataInitializer</target-component>
        <component-plugin>
            <name>ideationChangeLogsPlugin</name>
            <set-method>addChangeLogsPlugin</set-method>
            <type>org.exoplatform.commons.persistence.impl.ChangeLogsPlugin</type>
            <init-params>
                <values-param>
                    <name>changelogs</name>
                    <description>Change logs of ideation</description>
                    <value>db/changelog/ideations.db.changelog-1.0.0.xml</value>
                </values-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>
</configuration>